<% @posts.each do |post| %>

  <div class="post_wrapper">
    <h4 class="title"><%= link_to post.title, post %> </h3>
    <h5 class="body"><%= post.body %> </h5>
      <p>
        <div class="date">
          <%= post.created_at.strftime("%d %b %Y") %>
          at
          <%= post.created_at.strftime("%H:%M") %>
        </div>
      </p>
  </div>

<% end %>
