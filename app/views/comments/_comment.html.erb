<div class="comment clearfix">
    <div class="comment_content">
      <p class="comment_name"><strong><h5><%= comment.name %></h5> </strong></p>
      <p class="comment_body"><%= comment.body %></p>
    <h6>  <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> ago  |   <%= link_to "Delete", [comment.post, comment],
                              method: :delete, data: {confirm: "Are you sure" } %> </h6> </p>
    </div>
    </div>
